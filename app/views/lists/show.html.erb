<%= turbo_stream_from "list_entries" %>

<%= turbo_frame_tag "list_entries", class: "border border-dashed border-2 border-gray-400 p-4" do %>
    <%#= render @list.list_entries %>
    <tapestry-element maxduration="<%= @list.max_duration %>" items="<%= @list.list_entries.map { |entry| {id: entry.listable_id, duration: entry.listable.duration.in_minutes, color: ["#F87171", "#34D399"].sample} }.to_json %>"></tapestry-element>
<% end %>

