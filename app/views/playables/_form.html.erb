<%= form_with(model: playable, class: "sm:flex sm:items-center") do |form| %>
  <div class="w-full">
    <%= form.label :url, class: "sr-only" %>
    <%= form.text_field :url, class: "shadow-sm focus:ring-primary-500 focus:border-primary-500 block w-full sm:text-sm border-gray-500", placeholder: "Enter a SoundCloud or Bandcamp Url" %>
    <% if playable.errors.any? %>
      <ul>
        <% playable.errors.each do |error| %>
          <li class="mt-2 text-sm text-red-600"><%= error.full_message %></li>
        <% end %>
      </ul>
    <% end %>
  </div>
  <%= form.submit "Save", class: "mt-3 w-full inline-flex items-center justify-center px-4 py-2 border border-transparent shadow-sm font-medium text-white bg-primary-800 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-700 sm:mt-0 sm:ml-3 sm:w-auto sm:text-sm" %>
<% end %>
